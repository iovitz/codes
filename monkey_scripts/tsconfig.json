{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node", "reflect-metadata"],
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["public/**/*.d.ts", "public/**/*.ts", "public/**/*.js", "types/*.d.ts"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
